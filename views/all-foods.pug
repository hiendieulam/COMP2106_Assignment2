extends layout
block content
  h1.d-none= title
  main#main
    section#content1(role='region')
      .row
        // Display description of the Jewelry Products
        .col-12
          h5.allfoods Canadian Foods
          #allfoods.row
            each product in products
              .col-sm-12.col-md-3.col-lg-3.well2
                // Create detailed price information food and share information
                if loggedIn
                  a.text-danger.close(href=`/all-foods/delete/${product.id}`) x
                h2.productName= product.productName
                h2.linkshare
                  | Price: #{product.price} | SHARE
                  a(href='https://twitter.com', target='_blank', title='Click to view twitter')
                    img.img-linknetwork(src='/images/twitter.png', alt='twitter', width='17')
                  a(href='https://www.facebook.com', target='_blank', title='Click to view facebook')
                    img.img-linknetwork(src='/images/facebook.png', alt='facebook', width='17')
                  a(href='https://www.linkedin.com', target='_blank', title='Click to view linkedin')
                    img.img-linknetwork(src='/images/linkedin.png', alt='linkedin', width='17')
                img(src=`${product.image}`, style='width:100%;', alt='ADS')
                div.description!= product.description
                // Create vote quality, shipping cost about food
                h5 RATE: #{product.rate}
                // Choose size for food
                h5 Foods Size: #{product.foodSize}
                // Choose buy food
                button.addtocart(type='submit') Add To Cart
          if loggedIn
            a.btn.btn-primary(href="/all-foods/add-food") Add a food
