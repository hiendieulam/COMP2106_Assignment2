doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/styles.css')
    link(rel='stylesheet', href='/stylesheets/tabs.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css', integrity='sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  body
    // ARIA Landmark Roles throughout
    header(role='banner')
      // Role Banner
      .Topbar
          // Create images, text input, button to associate with user
          .ContactTop
              a.listcontact(href='#', target='_blank', title='Click to view Contact')
                  img(src='/images/contact_icon_30x21.png', alt='Contact')
                  | Contact Us
          .Info
              a.listinfo(href='mailto:info@sun.ca', target='_blank', title='Click to view Info')
                  img(src='/images/letter_icon.png', alt='Info')
                  | info@sun.ca
          .Tell
              a.listtell(href='tel:(512) 895-8569', target='_blank', title='Click to view Contact')
                  img(src='/images/Tell_icon.png', alt='Tell')
                  | (512) 895-8569
          .register
              a.register(href='register-login#first', title='Click to Register') Register
          .login
              a.login(href='register-login#second', title='Click to Login') Log in
          .Search
              form(action='#')
                  input.sitesearch(type='text', name='sitesearch', value='Search for...')
                  input.buttonsearch(type='submit', name='start_search', value='Search')
      // Create logo for company
      h1
          a#logo(href='/')
              img(src='/images/logo_O_204x84.png', alt='Logo')
      // Create a navigation to introduce the company to customers
      nav#floatingbar(role='navigation')
          // Function as a hamburger menu icon (http://copypastecharacter.com/graphic-shapes)
          a#menu-icon(href='#') â˜°
          ul
              li
                  a(href='/share-cooking') Share Cooking
              li
                  a(href='/all-foods') Foods
              li
                  a(href='/about-us') About Us


    block content
    // FOOTER
    footer
      section
        // Introduse some information about the company to customers
        .container-fluid
          // Create a row struture with five columns
          .row
            .col-sm-2
              h3 COMPANY
              br
              p About
              br
              p Need Food?
              br
            .col-sm-2
              h3 VOLUNTEER
              br
              p Volunteer
              br
              p Contact Us
            .col-sm-2
              h3 EVENTS
              br
              p New-All
              br
              p Events
              br
            .col-sm-2
              h3 FOODS FOR YOU
              br
              p Location
              br
              p Map
              br
            .col-sm-4
              h3 STAY CONNECT TO US
              br
              .row
                .col-sm-4
                  p
                    label Email Address
                .col-sm-8
                  input#email_address(type='email', aria-labelledby='email_address', required='')
              button.subscribe(type='submit') Subscribe
        br
      section
        // Introduse some information about the company to customers
        .container-fluid
          // Create a row struture with five columns
          .row
            #copyright.col-sm-12.col-md-12.col-lg-12
              | Copyright 2019 FOOD COMPANY - HienLam. 
              a(href='') Privacy Policy
              a(href='') Site Map 
              a(href='') Contact Us.
        br

